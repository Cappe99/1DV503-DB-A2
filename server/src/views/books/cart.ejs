<h1>Shopping Cart</h1>

<table class="table">
  <thead>
    <tr>
      <th>ISBN</th>
      <th>Title</th>
      <th>$</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% if (items.length === 0) { %>
      <tr>
        <td colspan="5">Your cart is empty</td>
      </tr>
    <% } %>

    <% items.forEach(item => { %>
      <tr>
        <td><%= item.isbn %></td>
        <td><%= item.title %></td>
        <td>$<%= item.price.toFixed(2) %></td>
        <td><%= item.qty %></td>
        <td>$<%= item.rowTotal.toFixed(2) %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<h3>Total: $<%= total.toFixed(2) %></h3>

<form method="POST" action="/checkout">
  <button type="submit">Checkout</button>
</form>